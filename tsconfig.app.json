{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUncheckedSideEffectImports": false,
    "noImplicitAny": false, // Disables errors when TypeScript can't infer types
    "strictNullChecks": false, // Disables null/undefined checks
    "noUnusedLocals": false, // Disables unused local variable checks
    "noUnusedParameters": false, // Disables unused parameter checks
    "noImplicitReturns": false, // Allows functions to implicitly return undefined
    "noFallthroughCasesInSwitch": false // Disables warnings about fall-through in switch cases
  
  },
  "include": ["src"]
}
